<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "RNRdb", root_path, id: "logo" %>
      <nav>
	<ul class="nav nav-pills pull-right">
	  <li>
	      <%= link_to "Protein Statistics", protein_counts_with_enzymes_path, title: "See Protein statistics for standard RNR enzymes" %>
	  </li>
	  <li class="dropdown" id="evaluation">
	    <a class="dropdown-toggle" data-toggle="dropdown" href="#evaulation">
	      Evaluation Process
	      <b class="caret"></b>
	    </a>
	    <ul class="dropdown-menu">
	      <li><%= link_to "Home", root_path, title: "Home" %></li>
	      <li><%= link_to "HMM Profiles", hmm_profiles_path, title: "profiles" %></li>
	      <li><%= link_to "Enzymes", enzymes_path %></li>
	      <li><%= link_to "HMM Results", hmm_results_path %></li>
	      <li><%= link_to "Evaluate/Sequence Sources", sequence_sources_path %></li>
	      <li><%= link_to "HMM Score Criteria", hmm_score_criteria_path %></li>
	      <li><%= link_to "Calculate/Pfitmap Releases", pfitmap_releases_path %></li>
	    </ul>
	  </li>
	  <li class="dropdown" id="release">
	    <a class="dropdown-toggle" data-toggle="dropdown" href="#release">
	      Release (<%= session_release ? session_release.release : 'No current release' %>)
	      <b class="caret"></b>
	    </a>
	    <ul class="dropdown-menu">
	      <% if releases %>
	      <% releases.each do |rel| %>
	      <li><%= link_to rel.release, change_release_path(:release_id => rel.id), :method => :post %> </li>
	      <% end %>
	      <% end %>
	      <li><%= link_to "All Releases", pfitmap_releases_path %> </li>
	    </ul>
	</ul>
      </nav>
    </div>
  </div>
</header>
