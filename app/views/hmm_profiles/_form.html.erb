<%= form_for(@hmm_profile, :html => {:class => "well", :multipart => true}) do |f| %>
<%= render :partial => 'shared/error_messages', :locals => { :error_subject => @hmm_profile} %>
<div class="row">
<div class="control-group span4">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="control-group span4">
  <%= f.label :protein_name %>
  <%= f.text_field :protein_name %>
</div>
<div class="control-group span4">
  <%= f.label :version %>
  <%= f.text_field :version %>
</div>
<div class="control-group span4">
  <%= f.label :parent_id %>
  <%= collection_select(:hmm_profile, :parent_id, @parent_candidates, :id, :name, {:include_blank => :true}) %>
</div>
<div class="control-group span4">
  <%= f.label :hmm_logo %>
  <%= f.file_field :hmm_logo %>
</div>
</div>
<%= f.submit "Create Profile", :class => "btn btn-large btn-primary"%>
<% end %>
