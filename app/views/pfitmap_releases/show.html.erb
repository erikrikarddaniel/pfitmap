<p id="notice"><%= notice %></p>
<div class="pageheader1">
  <h1>Pfitmap Release</h1>
    <% if can? :make_current, @pfitmap_release %>
    <%= button_to "Make this release current", pfitmap_release_make_current_path(@pfitmap_release), class: "btn btn-large"%>
    <% end %>
</div>
<hr>

<div class="row">
  <aside class="span4">
    <p> 
      <b> Release No: </b>
      <%= @pfitmap_release.release %>
    </p>
    <p>
      <b> Release Date: </b>
      <%= @pfitmap_release.release_date %>
    </p>
    <p>
      <b> Sequence Source </b>
      <%= @sequence_source ? @sequence_source.list_name : "none" %>
    </p>
  </aside>
  <div class="main-content span8">
    <h3>Passed</h3>
    <% if @db_sequences.any? %>
    <table>
      <thead>
	<tr>
	  <th>Db Sequence</th>
	  <th>Best Profile</th>
	</tr>
      </thead>
      <tbody>
	<% @db_sequences.each do |seq| %>
	<tr>
	  <td><%= seq.hmm_db_hits.first ? seq.hmm_db_hits.first.gi : None %></td>
	  <td><%= seq.best_hmm_profile(@sequence_source) ? seq.best_hmm_profile(@sequence_source).name : "none"%></td>
	</tr>
	<% end %>
      </tbody>
    </table>
    <% end %>
    <% if @profiles_with_statistics %>
    <table>
      <thead>
	<tr>
	  <th>HMM Profile</th>
	  <th>Count</th>
	  <th>Min Score</th>
	  <th>Max Score</th>
	</tr>
      </thead>
      <tbody>
	<% @profiles_with_statistics.each do |pair|%>
	<tr>
	  <td><%= pair[0].name %></td>
	  <td><%= pair[1][0] %></td>
	  <td><%= pair[1][1] %></td>
	  <td><%= pair[1][2] %></td>
	</tr>
	<% end %>
      </tbody>
    </table>
    <% end %>
  </div>

  <%= link_to 'Edit', edit_pfitmap_release_path(@pfitmap_release) %> |
  <%= link_to 'Back', pfitmap_releases_path %>
</div>
